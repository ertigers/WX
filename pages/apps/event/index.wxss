.container {
  padding: 16px;
}

.van-list {
  margin-bottom: 16px;
}

.van-field {
  margin-bottom: 12px;
}

.create-button {
  position: fixed;
  bottom: 20px;
  left: 50%;
  transform: translateX(-50%);
  width: 90%;
}

.van-popup {
  padding: 16px;
  border-radius: 12px; /* 圆角 */
  box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1); /* 阴影 */
  background: linear-gradient(180deg, #ffffff, #f7f7f7); /* 渐变背景 */
}

.van-button {
  margin-top: 10px; /* 按钮间距 */
}